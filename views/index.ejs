<!DOCTYPE html>

<html>

<head>
    <title>
        <%= pageTitle %>
    </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="css/uikit.min.css" />
    <script src="js/uikit.min.js"></script>
    <script src="js/uikit-icons.min.js"></script>

    <link rel="stylesheet" type="text/css" href="css/main.css" />
    <script type="text/javascript" src="js/main.js"></script>
</head>

<body>

    <div class="uk-navbar-container" uk-navbar>
        <div class="uk-navbar-left">
            <span class="uk-navbar-item uk-logo" uk-icon="server"></span>
            <ul class="uk-navbar-nav">
                <%= pageTitle %>
            </ul>
        </div>
        <div class="uk-navbar-right">
            <a href="https://github.com/lexb2/BoardControl" class="uk-navbar-item uk-logo">
                <span uk-icon="question"></span>
            </a>
        </div>
    </div>

    <div class="uk-container uk-container-small	page-container">
        <div class="uk-card uk-card-default uk-card-body">
            <div class="uk-section uk-section-default uk-section-small">
                <div class="uk-container">
                    <!--<h3>Commands</h3>-->
                    <div class="uk-margin">
                        <div class="uk-flex uk-flex-center" uk-grid>

                            <% commands.forEach(function(command, index) { %>
                                <button class="uk-button uk-button-default" onclick="sendCommandAndPopulateResultZone('<%= command.nickname %>')">
                                    <%= command.label %>
                                </button>

                                <% }); %>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div id="resultContainer" class="uk-card uk-card-default uk-card-body">
            <div class="uk-section uk-section-default uk-section-small">
                <div class="uk-container">
                    <div>
                        <!--<h3>Result</h3>-->
                        <span id="successIndicator" class="uk-label uk-label-success">Success</span>
                        <span id="failureIndicator" class="uk-label uk-label-warning">Error</span>
                        <span id="clearIcon">
                            <span class="linkBehavior" uk-icon="trash" onclick="updateResultIndicatorAndStatus('')"></span>
                        </span>
                    </div>
                    <div class="uk-alert mono" id="commandResult">
                    </div>
                </div>
            </div>
        </div>

        <div class="uk-card uk-card-default uk-card-body">
            <div class="uk-section uk-section-default uk-section-small">
                <div class="uk-container">
                    <!--<h3>Information</h3>-->
                    <div class="uk-margin">
                        <div id="informationZone">
                                <div uk-spinner></div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>
<script>
    getInformationAndPopulateInformationZone();
</script>

</html>